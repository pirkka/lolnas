#controls
  %a{:href => 'javascript: window.lmgui.locate();', :class => 'button'} Locate

#map
  #map_canvas

#list
  -@restaurants.each do |r|
    %div{:class => 'restaurant'}= r.url.blank? ? r.name : link_to(r.name, r.url, :target => "_blank")
    %em=r.distance
    %div{:class => 'menu'}
      -r.valid_lunches.each do |l|
        = l.title
        %strong= l.price
        %br/

:javascript
  $(function () {
    window.lmgui = new LunchMapGUI(#{@latitude},#{@longitude})
  });